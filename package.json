{
  "name": "property-grid",
  "version": "0.0.2",
  "description": "Property Grid",
  "repository": "https://github.com/sjsnider/property-grid",
  "main": "js/app.js",
  "private": true,
  "dependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "reactify": "^0.15.2",
    "watchify": "^2.1.1",
    "babelify": "^6.1.3",
    "node-sass": "^3.2.0"
  },
  "scripts": {
    "watch-js": "watchify static/js/app.js -d -o static/dist/bundle.js -v",
    "watch-css": "node-sass -rw ./static/stylesheets/ -o ./static/dist",
    "start": "npm run watch-css & npm run watch-js"
  },
  "author": "Scott Snider",
  "browserify": {
    "transform": [
      "babelify",
      "reactify",
      "envify"
    ]
  }
}
